.socials {
  display: flex;
  align-items: center;

  &--rounded {
    .socials__link {
      border: 1px solid #ccc;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      position: relative;

      .socials__icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        fill: #ccc;
      }

      &:hover {
        .socials__icon {
          fill: #5500f2;
        }
      }

    }
  }
}

.socials__item {
  margin-right: 40px;
  padding-bottom: 45px;
  &:hover .socials__link{
    fill: #5500f2;
  }

  &:last-child {
    margin-right: 0;
  }
}

.socials__link {
  width: 25px;
  height: 31px;
  display: block;
}

